---
layout: feed
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">

	<title>Alan Cruikshanks' Blog</title>
	<link href="http://cruikshanks.co.uk/blog/atom.xml" rel="self"/>
	<link href="http://cruikshanks.co.uk/blog"/>
	<updated>{{ site.time | date_to_xmlschema }}</updated>
	<id>http://cruikshanks.co.uk/blog</id>
	<author>
		<name>Alan Cruikshanks</name>
		<email>alan.cruikshanks@gmail.com</email>
	</author>

	{% for post in site.posts %}
		<entry>
			<title>{{ post.title }}</title>
			<link href="http://cruikshanks.co.uk{{ post.url }}"/>
			<updated>{{ post.date | date_to_xmlschema }}</updated>
			<id>http://cruikshanks.co.uk{{ post.id }}</id>
			<content type="html">{{ post.content | xml_escape }}</content>
		</entry>
	{% endfor %}

</feed>
